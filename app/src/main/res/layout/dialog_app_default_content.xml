<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#80000000"
    tools:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/dialog_default_bg"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="24dp"
        tools:layout_gravity="center">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/dialog_title_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#DE000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="更换已绑定的手机号"
                tools:visibility="visible"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:textColor="#757575"
            android:textSize="18sp"
            android:visibility="gone"
            tools:text="当前绑定的手机号为150****5678。"
            tools:visibility="visible"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/dialog_btn_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-24dp"
            android:layout_marginTop="22dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <Button
                android:id="@+id/dialog_first_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="24dp"
                android:minWidth="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="#687FFF"
                android:visibility="gone"
                tools:text="YES"
                tools:visibility="visible"/>

            <Button
                android:id="@+id/dialog_second_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="24dp"
                android:minWidth="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="#687FFF"
                android:visibility="gone"
                tools:text="cancle"
                tools:visibility="visible"/>

            <Button
                android:id="@+id/dialog_third_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="24dp"
                android:minWidth="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="#687FFF"
                android:visibility="gone"
                tools:text="OK"
                tools:visibility="visible"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</FrameLayout>