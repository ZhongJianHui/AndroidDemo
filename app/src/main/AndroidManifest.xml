<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mainli.d.d2018"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/test_activity"/>
        <activity
            android:name=".activity.DiceActivity"
            android:label="@string/dice_activity"/>
        <activity
            android:name=".activity.TestPostCallMethodActivity"
            android:label="@string/test_post_call_method_activity"/>
        <activity
            android:name=".activity.AnimationsContainerTestActivity"
            android:label="@string/animations_container_test_activity"/>
        <activity
            android:name=".activity.TestAPTActivity"
            android:label="编译时注解"/>
        <activity
            android:name=".activity.RichMediaActivity"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:label="富媒体"/>
        <activity
            android:name=".activity.NumberCaptchaActivity"
            android:label="验证码控件"
            android:windowSoftInputMode="stateAlwaysVisible"/>
        <activity
            android:name=".activity.EmojiActivity"
            android:label="Emoji表情"
            android:windowSoftInputMode="stateAlwaysVisible"/>
        <activity
            android:name=".activity.CoordinatorLayoutActivity"
            android:label="CoordinatorLayout自定义Behavior"/>
        <activity
            android:name=".activity.GlideActivity"
            android:label="gggg"/>
    </application>

</manifest>